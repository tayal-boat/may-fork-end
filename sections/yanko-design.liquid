        }
        .text-box {
          padding: 40px 20px !important;
        }
        .float-1 {
          max-width: 130px !important;
        }
        .float-2 {
          max-width: 45px !important;
          bottom: 0;
          top: unset;
        }

        .dots {
          display: none !important;
        }
      }

