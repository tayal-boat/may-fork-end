    <script>
      $('.row-form').submit(function (e) {
        e.preventDefault();
        let fullName = $('#y_fname').val();
        let age = $('#y_age').val();
        let city = $('#y_city').val();
        let phone = $('#y_phone').val();
        let email = $('#y_email').val();
        let check = $('#check').is(':checked');
        function validateEmail($email) {
          var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
          return emailReg.test(email);
        }
        if (
          fullName == ' ' ||
          age == '' ||
          city == '' ||
          phone == '' ||
          email == '' ||
          check == false ||
          !validateEmail(email)
        ) {
          $('.error small').css('visibility', 'visible');
        } else {
          $('.row-form input:not(input.y_submit)').val('');
          $('.error small').text('Thanks for submitting the details!');
          $('.error small').css('visibility', 'visible');
          $('.y_tnc a')
            .prop(
              'href',
              'https://drive.google.com/drive/folders/1lx-G5_GxaMW9RZWJXnhHt1GsGL2Q9Jow?usp=sharing'
            )
            .removeClass('disabled')
            .addClass('download-now');
          clevertap.profile.push({
            Site: {
              Yanko_Email: email,
              Yanko_FullName: fullName,
              Yanko_Age: age,
              Yanko_City: city,
              Yanko_Phone: phone,
              Yanko_AcceptsMarketing: 'true',
            },
          });
        }
      });
      $('.form-yanko input').change(function () {
        $('.error small').css('visibility', 'hidden');
      });
    </script>

