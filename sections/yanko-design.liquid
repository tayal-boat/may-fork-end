      #check {
        display: inline-block;

        background-color: transparent;
        color: transparent;
        margin-right: 5px;
      }
      input[type='checkbox'] {
        appearance: none;
        background-color: transparent;
        width: 20px;
        height: 25px;
        margin: 0;
        color: #fff;
        border: 0.15em solid #575757;
        border-radius: 0.15em;
        display: grid;
        place-content: center;
        position: relative;
      }
      input[type='checkbox']::before {
        content: '';
        width: 10px;
        height: auto;
        transform: scale(0);
        transition: 120ms transform ease-in-out;
        /* box-shadow: inset 1em 1em #fff; */
      }

      input[type='checkbox']:checked::before {
        content: 'âœ“';
        /* box-shadow: inset 1em 1em red; */
        /* background: red; */
        color: red;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-weight: bold;
      }
      a.download-now {
        background-color: #ee1c25;
        color: #fff !important;
      }
