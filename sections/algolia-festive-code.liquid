{% capture algolia_no_result %}
  {{ section.settings.no_result_message | json }}
{% endcapture %}
{% capture algolia_festive %}
  [
  {% for block in section.blocks %}
    {
    "search_query" : "{{ block.settings.search_query }}",
    "coupon_code" : "{{ block.settings.coupon_code }}",
    "coupon_value" : "{{ block.settings.coupon_value }}",
    "message" : "{{ block.settings.message }}",
    "message2" : "{{ block.settings.message2 }}",
    "text_alignment" : "{{ block.settings.text_alignment }}",
    "coupon_url" : "{{ block.settings.coupon_url }}"
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
  ]
{% endcapture %}

<script>
  Shopify.algolia_festive = `{{ algolia_festive }}`;
  Shopify.algolia_no_result = `{{ algolia_no_result }}`;
</script>


{% schema %}
  {
    "name": "algolia Codes",
    "settings": [
      {
        "type": "textarea",
        "id": "no_result_message",
        "label": "No result page message",
        "default": "Oh shoot. We've hit offshore with that search. <br> ðŸ˜‘ <br> Try one of this?"
      }

    ],
    "blocks": [
      {
        "type": "algolia",
        "name": "algolia Codes",
        "settings": [
          {
            "type": "text",
            "id": "search_query",
            "label": "Search query"
          },
          {
            "type": "url",
            "id": "coupon_url",
            "label": "Background Image"
          },
          {
            "type": "select",
            "id": "text_alignment",
            "label": "Text Alignment",
            "options": [
              {
                "value": "left",
                "label": "Left"
              }, {
                "value": "center",
                "label": "Center"
              }, {
                "value": "right",
                "label": "Right"
              }
            ],
            "default": "center"
          },
          {
            "type": "text",
            "id": "coupon_code",
            "label": "Coupon code"
          }, {
            "type": "richtext",
            "id": "coupon_value",
            "label": "Coupon value"
          }, {
            "type": "textarea",
            "id": "message",
            "label": "Message"
          }, {
            "type": "textarea",
            "id": "message2",
            "label": "Message 2",
            "default": "Here's a small gift from us to double your celebrations..."
          }
        ]
      }
    ],

    "presets": [
      {
        "category": "algolia",
        "name": "algolia Codes",
        "settings": {}
      }
    ]
  }
{% endschema %}