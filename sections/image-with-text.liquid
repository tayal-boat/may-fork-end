<div class="container-fluid strongly-spaced-row {% if section.settings.sectionName %} {{ section.settings.sectionName }} {% endif %} layout-content-with-image-{{ section.settings.layout }} valign-{{ section.settings.alignment}} cf">
  {% if section.settings.layout == 'left' %}
  <div class="image-cont">
    {% if section.settings.image_link_url != blank %}<a href="{{ section.settings.image_link_url }}">{% endif %}
    {% if section.settings.image == blank %}
    <div class="placeholder-image">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
    {% else %}
    <img class="lazyload" data-src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.image.alt | escape }}" />
    {% endif %}
    {% if section.settings.image_link_url != blank %}</a>{% endif %}
  </div>{% endif %}<div class="content">

  {% if section.settings.title != blank %}
  <h1 class="majortitle in-content">
    {%- if section.settings.image_link_url != blank -%}
    	<a href="{{ section.settings.image_link_url }}">{{ section.settings.title | escape }}</a>
    {%- else -%}
  		{{ section.settings.title | escape }}
    {%- endif -%}
  </h1> 
  	
  {% endif %}

  <div class="user-content">{{ section.settings.text }}</div>

  {% if section.settings.cta_text != blank %}
  <div class="spaced-row-above">
    <a class="button altcolour" href="{{ section.settings.cta_url | default: '#' }}">{{ section.settings.cta_text | escape }}</a>
  </div>
  {% endif %}

  </div>{% if section.settings.layout == 'right' %}<div class="image-cont">
    {% if section.settings.image_link_url != blank %}<a href="{{ section.settings.image_link_url }}">{% endif %}
    {% if section.settings.image == blank %}
    <div class="placeholder-image">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
    {% else %}
    <img class="lazyload" data-src="{{ section.settings.image | img_url: 'original' }}" alt="{{ section.settings.image.alt | escape }}" />
<!--       <img class="lazyload mobile-only" data-src="{{ section.settings.image1 | img_url: 'original' }}" alt="{{ section.settings.image.alt | escape }}" />
  -->
  {% endif %}
    {% if section.settings.image_link_url != blank %}</a>{% endif %}
  </div>
  {% endif %}
</div>

<script>
  $(document).ready(function($) {
    var userSource = '';
    if(navigator.userAgent.includes('Mobile')) userSource = 'Mobile';
    else if(navigator.userAgent.includes('iPad')) userSource = 'Tablet';
    else userSource = 'Desktop';
  	$('.army-boatheads').on('click', function(){
        const sectionTitle = '{{ section.settings.title | escape }}';
        clevertap.event.push(sectionTitle + " section clicked", {"userSource": userSource});
    });
  })
</script>
