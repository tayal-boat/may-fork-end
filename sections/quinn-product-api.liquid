{
    "title": "{{ product.title }}",
    "compare_at_price": "{{ product.compare_at_price | money  }}",
    "compare_at_price_max": "{{ product.compare_at_price_max | money  }}",
    "compare_at_price_min": "{{ product.compare_at_price_min | money  }}",
    "featured_image": "{{ product.featured_image | img_url }}",
    "featured_image_small": "{{ product.featured_image | img_url: '60x60' }}",
    "featured_image_large":"{{ product.featured_image | img_url: '150x150' }}",
    "handle": "{{ product.handle }}",
    "id": "{{ product.id }}",
    "price": "{{ product.price | money  }}",
    "price_max": "{{ product.price_max | money  }}",
    "price_min": "{{ product.price_min | money  }}",
    "title": "{{ product.title }}",
    "type": "{{ product.type }}",
    "url": "{{ product.url }}",
    "compare_at_price_number": "{{ product.compare_at_price   }}",
    "compare_at_price_max_number": "{{ product.compare_at_price_max   }}",
    "compare_at_price_min_number": "{{ product.compare_at_price_min  }}",
    "price_number": "{{ product.price   }}",
    "price_max_number": "{{ product.price_max  }}",
    "price_min_number": "{{ product.price_min  }}",
    "variants": [
        {% for variant in product.variants %}
            {
                "compare_at_price": "{{ variant.compare_at_price | money  }}",
                "compare_at_price_number": "{{ variant.compare_at_price   }}",
                "id": "{{ variant.id }}",
                "title": "{{ variant.title }}",
                "url": "{{ variant.url }}",
                "featured_image": "{{ variant.featured_image | img_url }}",
                "price": "{{ variant.price | money  }}",
                "price_number": "{{ variant.price   }}",
                "option1": "{{ variant.option1 }}",
                "option2": "{{ variant.option2 }}",
                "option3": "{{ variant.option3 }}",
                "option4": "{{ variant.option4 }}"
            }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ],
    "images": [
        {% for image in product.images %}
            {
                "id": "{{ image.id }}",
                "src": "{{ image.src | img_url }}"
            }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ],
    
    "product_options": [
        {% for product_option in product.product_options %}
            {
                "name": "{{ product_option.name }}",
                "position": "{{ product_option.position }}",
                "values": [
                    {% for value in product_option.values %}
                    {
                        "name": "{{ value.name }}",
                        "position": "{{ value.position }}",
                        "id": "{{ value.id }}",
                    }{% unless forloop.last %},{% endunless %}
                        
                    {% endfor %}
                ],
            }
        {% endfor %}
    ],
    "options": [
        {% for option in product.options %}
            "{{ option }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ],
    "options_with_values": [
        {% for option in product.options_with_values %}
            {
                "name": "{{ option.name }}",
                "values": [
                   {% for value in option %}
                     "{{ value }}"
                      {% unless forloop.last %},{% endunless %}
                  {% endfor %}
                ]
            }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ],
    "swatches_data": {
        {% if product.options contains "Color" or product.options contains 'Shade' %}
            {% for variant in product.variants %}
                "{{ variant.option1 }}": {
                    "image": "{{ variant.featured_image | img_url }}",
                    "swatch": "{{ variant.option1 }}",
                    "variant_id": "{{ variant.id | json }}",
                    "value": {{ variant.option1 | json }},
                    "available": {{ variant.available | json }},
                    "group": {{ variant.metafields.color.group | json }},
                    "image": {{ variant.option1 | handle | append: '.png' | file_img_url: '50x50' | prepend: 'https:' | split: '?' | first | json }}
                }{% unless forloop.last %},{% endunless %}
            {% endfor %}
        {% endif %}
    }
}



