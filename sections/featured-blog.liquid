<style>
  .boat-featured-blogs {
    color: white;
  }
  .boat-featured-blogs .blog-row {
    background: #1b1a1a;
  }
  .boat-featured-blogs .all-blogs {
    display: block;
    text-align: right;
  }
  .boat-featured-blogs .article-list {
    flex-wrap: nowrap;
  }
  .boat-featured-blogs .article__inner {
    margin: 0;
    overflow: hidden;
  }
  .boat-featured-blogs .article-list .article {
    border: 0 !important;
    padding: 0 !important;
    margin: 0 !important;
    width: 33%;
  }
  .boat-featured-blogs .article-list .article h3 {
    font-size: 18px;
    margin-top: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .boat-featured-blogs .article-list .article h3 a:hover {
    color: #ff0000;
    text-decoration: none;
  }
  .boat-featured-blogs .article .user-content {
    font-size: 13px;
    line-height: normal;
    min-height: 35px;
    margin-bottom: 0 !important;
  }
  .article__inner {
    flex-direction: column;
  }
  .article-list.article-layout--columns.article-layout--one-row::-webkit-scrollbar {
    height: 1px;
  }

  .all-blogs.text-red:hover {
    color: white;
  }
  .boat-featured-blogs .article-image img {
    border-radius: 10px;
  }
  @media screen and (max-width: 1024px) {
    .boat-featured-blogs .article-list .article h3 {
      font-size: 14px;
      margin: 0;
    }
    .boat-featured-blogs .article .user-content,
    .boat-featured-blogs .article-list .article h3 {
      min-height: 1px;
    }
    .boat-featured-blogs .article-list {
      display: flex;
      overflow-x: auto;
    }
    .boat-featured-blogs .article-list .article {
      min-width: 280px;
      padding: 10px !important;
    }
    .boat-featured-blogs .article-image {
      width: 100%;
      margin-right: 1rem;
    }
    .article-list {
      gap: 0;
      grid-gap: 0;
    }
    .boat-featured-blogs .article-list .article {
      width: 100%;
    }
  }

  @media screen and (max-width: 767px) {
    .shopify-section--press,
    .boat-featured-blogs {
      padding: 0;
    }
    .boat-featured-blogs .article-image {
      margin-bottom: 10px;
    }
  }
</style>

{% assign blog = blogs[section.settings.blog] %}
{% capture chevron_right -%}
  <span class="icon-small icon-natcol">{% include 'svg-chevron-right' %}
  </span>
{%- endcapture %}

<div class="container padded-row blog-row vertical-breather article_list-main-container-{{section.id}}" data-section-type="featured-blog">
  {% unless blog.empty? %}
    <header class="section__header text-container d-flex justify-content-between mb-0">
      <h3 class="heading h2 text-white">bo<span class="text-red">A</span>t BLOGS</h3>
      <a href="https://www.boat-lifestyle.com/blogs/blog" class="all-blogs ">
        <b>
          <u>View All >
          </u>
        </b>
      </a>
    </header>

    {% if blog.articles.size == 0 %}
      <p class="align-center">{{ 'onboarding.blog.empty' | t }}
      </p>
    {% else %}
      {% if section.settings.crop_image %}
        {% assign aspect_ratio_split = section.settings.crop_style | split: '-' %}
        {% assign aspect_ratio = 1.0 | times: aspect_ratio_split[0] | divided_by: aspect_ratio_split[1] %}
      {% else %}
        {% assign aspect_ratio = false %}
      {% endif %}
      {% capture custom_article_list %}
        <div class="article-list article-layout--columns article-layout--one-row">
          <div class="article">
            <div class="article__inner">
              <div class="article-image image-zoom">
                <a href="{{ section.settings.pillar_url }}">
                  <img class="article-item__image" sizes="(max-width: 740px) 81vw, (max-width: 999px) 37vw, 425px" loading="lazy" {% render 'image-attributes', image: section.settings.pillar_image, sizes: '600,700,800,1000,1200,1400,1600,1800,2000' -%}>
                </a>
              </div>
              <h3>
                <a href="{{ section.settings.pillar_url }}">{{ section.settings.pillar_title }}
                </a>
              </h3>
              <div class="meta visually-hidden">
                <span class="read-more">
                  <a href="{{ section.settings.pillar_url }}">Read more</a>
                </span>
              </div>
            </div>
          </div>
          <div class="article">
            <div class="article__inner">
              <div class="article-image image-zoom">
                <a href="{{ section.settings.pillar_url_2 }}">
                  <img class="article-item__image" sizes="(max-width: 740px) 81vw, (max-width: 999px) 37vw, 425px" loading="lazy" {% render 'image-attributes', image: section.settings.pillar_image_2, sizes: '600,700,800,1000,1200,1400,1600,1800,2000' -%}>
                </a>
              </div>
              <h3>
                <a href="{{ section.settings.pillar_url_2 }}">{{ section.settings.pillar_title_2 }}
                </a>
              </h3>
              <div class="meta visually-hidden">
                <span class="read-more">
                  <a href="{{ section.settings.pillar_url_2 }}">Read more</a>
                </span>
              </div>
            </div>
          </div>
          <div class="article">
            <div class="article__inner">
              <div class="article-image image-zoom">
                <a href="{{ section.settings.pillar_url_3 }}">
                  <img class="article-item__image" sizes="(max-width: 740px) 81vw, (max-width: 999px) 37vw, 425px" loading="lazy" {% render 'image-attributes', image: section.settings.pillar_image_3, sizes: '600,700,800,1000,1200,1400,1600,1800,2000' -%}>
                </a>
              </div>
              <h3>
                <a href="{{ section.settings.pillar_url_3 }}">{{ section.settings.pillar_title_3 }}
                </a>
              </h3>
              <div class="meta visually-hidden">
                <span class="read-more">
                  <a href="{{ section.settings.pillar_url_3 }}">Read more</a>
                </span>
              </div>
            </div>
          </div>
          {% for article in blog.articles limit: 1 %}
            <div class="article">
              <div class="article__inner">
                {% if article.image and section.settings.show_featured_image %}
                  <div class="article-image image-zoom">
                    <a href="{{ article.url }}">
                      <img class="article-item__image" sizes="(max-width: 740px) 81vw, (max-width: 999px) 37vw, 425px" loading="lazy" {% render 'image-attributes', image: article.image, sizes: '600,700,800,1000,1200,1400,1600,1800,2000' -%}>
                    </a>
                  </div>
                {% endif %}
                <h3>
                  <a href="{{ article.url }}">{{ article.title }}
                  </a>
                </h3>
                <div class="user-content visually-hidden">
                  {{ article.excerpt_or_content }}
                </div>
                <div class="meta">
                  <span class="iconmeta time">
                    {% if section.settings.show_date %}
                      {{ article.published_at | date: format: 'month_date_year' }}
                    {% endif %}
                    {% if section.settings.show_author %}
                      {% if section.settings.show_date %}&mdash;{% endif %}
                      <span class="author">{{ article.author }}
                      </span>
                    {% endif %}
                  </span>
                  <span class="read-more visually-hidden">
                    <a href="{{ article.url }}">Read more</a>
                  </span>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endcapture %}
      {% if section.settings.lazyload_section %}
        <div class="article_list-container article_list-container-{{section.id}}">
          <div class="loading_icon">
            <img class="lazyload" src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/final_loader.gif?v=1669098911" alt="Load More" style="width: 50px;">
          </div>
        </div>
      {% else %}
        {{ custom_article_list }}
      {% endif %}
    {% endif %}
  {% else %}
    <h2 class="hometitle h4-style align-center">{{ section.settings.title | escape }}
    </h2>
    <div class="article-list article-layout--columns article-layout--one-row">
      {% for i in (1..3) %}
        <div class="article">
          <div class="article__inner">
            {% if section.settings.show_featured_image %}
              <div class="article-image">
                <div class="placeholder-image">{{ 'image' | placeholder_svg_tag }}
                </div>
              </div>
            {% endif %}
            <h3>{{ 'onboarding.article.title' | t }}
            </h3>
            <div class="user-content hide">
              {{ 'onboarding.article.excerpt' | t }}
            </div>
            <div class="meta">
              <span class="iconmeta time">
                {% if section.settings.show_date %}
                  {{ 'now' | date: format: 'month_date_year' }}
                {% endif %}
                {% if section.settings.show_author %}
                  {% if section.settings.show_date %}&mdash;{% endif %}
                  <span class="author">{{ 'onboarding.article.author' | t }}
                  </span>
                {% endif %}
              </span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endunless %}
</div>
{% if section.settings.lazyload_section %}
  <script>
    window.addEventListener('load', function() {
      sessionStorage.setItem('article_list- {{section.id}}', 'false');
      function ScrollStart() {
        if (sessionStorage.getItem('article_list- {{section.id}}') == 'false') {
          document.querySelector('.article_list-container- {{section.id}}').innerHTML = `{{ custom_article_list | strip_newlines }}`;
          sessionStorage.setItem('article_list- {{section.id}}', 'true');
        }
      }
      var observer = new IntersectionObserver(function(entries) {
        if (entries[0].isIntersecting === true) 
          ScrollStart();
        
      }, {threshold: [1]});
      if (document.querySelector('.article_list-main-container- {{section.id}}') !== null) {
        observer.observe(document.querySelector('.article_list-main-container- {{section.id}}'));
      }
    });
  </script>
{% endif %}

