      }, {
        "type": "url",
        "id": "pillar_url_2",
        "label": "Pillar Blog URL 2"
      }, {
        "type": "image_picker",
        "id": "pillar_image_3",
        "label": "Pillar Blog Image 3"
      }, {
        "type": "text",
