  <script>
    function fetchDataAndDisplayCenters() {
    const fileUrl = '{{ page.metafields.page.service_center_list | file_url}}';

    // Define the state containers
    const stateContainers = {
      'punjab': '#punjab .panel',
      'uttar pradesh': '#up .panel',
      'delhi': '#delhi .panel',
      'west bengal': '#wb .panel',
      'haryana': '#haryana .panel',
      'bihar': '#bihar .panel',
      'gujarat': '#gujarat .panel',
      'jammu&kashmir': '#jk .panel',
      'maharashtra': '#maharashtra .panel',
      'telangana': '#telangana .panel',
      'karnataka': '#karnataka .panel',
      'tamil nadu': '#tn .panel',
      'kerala': '#kerala .panel',
      'jharkhand': '#jharkhand .panel',
      'odisha': '#odisha .panel',
      'madhya pradesh': '#mp .panel',
      'andhra pradesh': '#ap .panel',
      'uttarakhand': '#uk .panel',
      'chhattisgarh': '#chhattisgarh .panel',
      'rajasthan': '#rajasthan .panel'
    };
    
    // Fetching data from URL
    fetch(fileUrl)
      .then(response => response.arrayBuffer())
      .then(buffer => {
        const data = new Uint8Array(buffer);
        const workbook = XLSX.read(data, { type: 'array' });
        const sheetName = workbook.SheetNames[0];
        const sheet = workbook.Sheets[sheetName];
        const jsonData = XLSX.utils.sheet_to_json(sheet);
        const centersList = jsonData;
        console.log(centersList[1])
        // Function to filter and show data for a state
        function showDataForState(state, container) {
          const filteredCenters = centersList.filter(center => center['Classification'].toLowerCase() === state);
          filteredCenters.forEach(center => {
            const classification = center['Classification'];
            const address = center['Address'];
            const pincode = center['Pincode'];
            const centerName = center['MSC name'];
            const city = center['City Name'];
            const phone = center['Phone'];
            const locationURL = center['Location URL'];
    
            $(container).append(`
              <section class="new_address">
                <p style="text-transform:capitalize;">
                  <strong>${city}, ${state}</strong>
                </p>
                <address>${centerName}, ${address} ${pincode}</address>
                <p>
                  <a href="${locationURL}" target="_blank" style="color: #ea2127; text-decoration: none; display:block; margin: 10px 0;" rel="noopener noreferrer">See Map</a>
                  <strong>Customer Care:</strong> ${phone}
                </p>
              </section>
            `);
          });
        }
    
        // Iterate over state containers and call showDataForState
        for (const state in stateContainers) {
          const container = stateContainers[state];
          showDataForState(state, container);
        }
      })
      .catch(error => console.error('Error:', error));
    }
    // Call the function when the page is loaded
    document.addEventListener('DOMContentLoaded', fetchDataAndDisplayCenters);
</script>
