{% assign images = shop.metafields.modemagic.trendingSlider.images %}
<div class="container-fluid cf mt-4 section-id-{{ section.id }} trending-products-slider" data-section-type="custom-row">
  <div class="trending-slider">
    <div class="row trending-row">
      <div class="col-12 trending-products-headings launch-head trendsetter">
        <h2 class="text-white text-center">Trending in Lol</h2>
      </div>
      <div class="col-12 products-sliders">
        {% for image in images %}
        <div class="products-slides slide-{{ forloop.index }}">
          <a href="{{ image.productLink }}">
            <span class="slide-image">
              {% include 'mason-responsive-image', image: image %}
            </span>
          </a>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<style>
.products-sliders  {
  max-width: calc(100vw - 10%);
  margin: 0 auto;
}
.products-sliders .slick-slide {
  margin: 0 5px;
}
.products-sliders .slick-list {
  margin: 0px -5px 0px -5px;
}
  .products-sliders .slick-track {padding-bottom: 30px;}
  .products-sliders .slick-prev, .products-sliders .slick-next {
    font-size: 0;
    position: absolute;
    bottom: 20px;
    color: #ea2127;
    border: 0;
    background: none;
    z-index: 1;
}
  .products-sliders .slick-prev {
    left: -48px;
}
  .products-sliders .slick-prev:after {
    content: "\f104";
    font: 60px/1 'FontAwesome';
    font-weight: bold;
}
  .products-sliders .slick-next {
    right: -16px;
    text-align: right;
}
  .products-sliders .slick-next:after {
    content: "\f105";
    font: 60px/1 'FontAwesome';
    font-weight: bold;
}
  .products-slides {transition: all .5s ease-in-out;}
/*   .products-slides:hover {transform: scale(1.06);} */
  @media screen and (max-width: 767px) {
    .products-sliders .slick-list {padding-left: 0!important;}
  }
</style>
<script type="text/javascript">
	$(document).ready(function($) {
      $('.products-sliders').slick({
        dots: false,
        infinite: false,
        speed: 500,
        slidesToShow: 3,
        slidesToScroll: 3,
        autoplay: false,
        autoplaySpeed: 2000,
        arrows: true,
        responsive: [
          {
          breakpoint: 3000,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 1
          }
        },
          
          {
          breakpoint: 1920,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 1
          }
        },
        {
           breakpoint: 767,
           settings: {
              arrows: false,
              slidesToShow: 1,
              slidesToScroll: 1,
              centerMode: true,
			  centerPadding: '20%'
           }
        }]
    });
      
    $(window).scroll(function(){
      var docViewTop = $(window).scrollTop();
      var docViewBottom = docViewTop + $(window).height();
      var elemTop = $('.trending-products-slider').offset().top;
      if ((elemTop <= docViewBottom) && (elemTop >= docViewTop)) {
          $('.products-sliders').addClass('slideRight');
      }
    });
    
    
      
});
</script>


