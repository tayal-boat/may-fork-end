<div class="container-fluid cf mt-4 section-id-{{ section.id }} new-boat-playground" data-section-type="custom-row">
  <div class="boat-playground">
    <div class="row playground-row">
      <div class="col-12">
        <div class="row">
        	<div class="col-12 trending-products-headings trendsetter">
              <h2 class="text-center text-white">New Launches</h2>
            </div>
        </div>
        <div class="row">
          <div class="col-11">
          	<div class='slider'>
              {% for block in section.blocks %}
              <div class="new-products-slide slide-{{ forloop.index }}">
                <a href="{{ block.settings.imageUrl }}" class="row">
                  <span class="slide-image col-lg-5">
                    {% include 'responsive-image', image: block.settings.image %}
                  </span>
                  <span class="slide-text col-lg-7 text-left">
                    <span class="slide-img-title text-center">{{ block.settings.prodTitle }}</span>
                    {{ block.settings.text }}
                    <span class="shop-now-new">{{ block.settings.buttonText }}</span>
                  </span>
                </a>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
/*Slider*/
.new-boat-playground .slider > div {display:block; width:100%;text-align: center;font-size: 2em;}

/* Navigation */
  .left-thumbs-div {
  	display: flex;
    align-items: center;
/*     justify-content: center; */
  }
.slider-nav {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 200px;
    flex-wrap: wrap;
}
.slider-nav > div {
  display: inline-block;
    width: 80px;
    height: 80px;
    text-align: center;
    background: #ccc;
    cursor: pointer;
}
  .slider-nav .nav-slide {margin-bottom:4px;}
  .slider-nav .nav-slide img {display:block;}
  .new-products-slide img {border-radius: 50%;max-width:300px;max-height:300px;left: 50% !important;transform: translateX(-50%);}
  .new-products-slide .rimage-wrapper {background:transparent;}
  .new-products-slide a.row {align-items:center;}
  .new-products-slide a.row:hover {text-decoration:none;color:inherit;}
  .new-products-slide .slide-text {font-size: 16px;font-weight: 500;padding-right: 40px;line-height: 1.5;}
  .new-boat-playground .playground-row {
    background: #494949;
    padding: 20px 0;
    margin: auto;
    max-width:100%;
  }
  .new-boat-playground .playground-row .col-11 {background: #ccc;margin:auto;}
  .new-boat-playground .playground-row h2 {font-size: 50px;}
  .new-boat-playground .new-products-slide .rimage-wrapper {
    max-width: 300px;
    margin: auto;
    height: 300px;
    background-size: cover;
    transition: all .5s ease-in-out;
    position: relative;
  }
  .new-boat-playground .new-products-slide .slide-image {padding: 20px;}
  .new-boat-playground .new-products-slide .rimage-outer-wrapper {
    max-width:300px!important;
  }
  .slider-nav .nav-slide:hover {border-bottom:2px solid #ff0000;}
  .active-thumb {display:none !important;}
  .shop-now-new {
  	background: #ff0000;
    color: #fff;
    font-size: 12px;
    padding: 4px 20px;
    border-radius: 2em;
    font-weight: bold;
    display: block;
    text-align: center;
    max-width: 150px;
    margin: 20px auto;
  }
  .slide-img-title {
  	display: block;
    font-size: 16px;
    margin: 20px 0 10px;
    font-weight: bold;
    text-transform: uppercase;
  }
  .new-boat-playground .slick-prev, .new-boat-playground .slick-next {
    font-size: 0;
    position: absolute;
    bottom: 20px;
    color: #ea2127;
    border: 0;
    background: none;
    z-index: 1;
}
  .new-boat-playground .slick-prev {
    left: -40px;
}
  .new-boat-playground .slick-prev:after {
    content: "\f104";
    font: 60px/1 'FontAwesome';
    font-weight: bold;
}
  .new-boat-playground .slick-next {
    right: -10px;
    text-align: right;
}
  .new-boat-playground .slick-next:after {
    content: "\f105";
    font: 60px/1 'FontAwesome';
    font-weight: bold;
}
  @media screen and (max-width:1100px) {
  	.new-boat-playground .new-products-slide .rimage-wrapper {
    	padding-top:100%!important;
    }
    .new-boat-playground .playground-row .col-12 > .row {flex-direction: column-reverse;}
    .left-thumbs-div {justify-content: center;margin-top: 20px;}
    .slider-nav {flex-direction: row;height:auto;}
    .slider-nav .nav-slide {margin-right:4px;margin-bottom:0px;}
    .new-boat-playground .trendsetter {margin-top:0!important;}
    .new-boat-playground {margin-bottom:4rem!important;}
    .new-products-slide .slide-text {padding-right: 15px;}
    .new-boat-playground .playground-row h2 {font-size: 40px;}
  }
</style>
<script type="text/javascript">
	$(document).ready(function($) {
      $('.new-boat-playground .slider').slick({
        arrows:true, dots: false, infinite:true, speed:500,
        autoplay:true, autoplaySpeed: 5000, slidesToShow:1, slidesToScroll:1, fade:true
      });
      $('.new-boat-playground .slider-nav > div').click(function() {
          $('.new-boat-playground .slider').slick('slickGoTo',$(this).index());
      })
      var userSource = '';
      if(navigator.userAgent.includes('Mobile')) userSource = 'Mobile';
      else if(navigator.userAgent.includes('iPad')) userSource = 'Tablet';
      else userSource = 'Desktop';
      $('.boat-playground').on('click', function(){
        clevertap.event.push("New Launches section clicked", {"userSource": userSource});
      });
  	});
</script>


