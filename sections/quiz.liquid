<style>
  #custom-saleModal{z-index:9999;background:#0009;padding:0!important;transform:translateY(0%)}
  #custom-saleModal .modal-dialog,#custom-saleModals-1 .modal-dialog,#custom-saleModals-2 .modal-dialog{top:10%}
  #custom-saleModal .close{position:absolute;top:0;right:0;width:30px;height:30px;background:#EB1C24;color:#fff;line-height:30px;font-weight:400;opacity:1;text-align:center;font-size:30px!important}
  #custom-saleModal .close:focus{border:0;outline:none}
  #custom-saleModal input#sale_email::placeholder{color:grey!important}
  #custom-saleModal .error-msg-sale,#custom-saleModal .thankyou-msg-sale,#custom-saleModal .aluser-msg-sale{text-align:center;margin:0;font-size:12px;opacity:.8}
  #custom-saleModal .sale-btn:focus{outline:none}
  #custom-saleModal img{display:block}
  #custom-saleModal .modal-content{border:0}
  #custom-saleModal .modal-form{background:{{ section.settings.popup_backgroung}} }
  #custom-saleModal input{background:transparent;color:#ccc;margin-right:4px;padding:0 12px;border:0}
  #custom-saleModal input::-webkit-input-placeholder{color:#ccc}
  #custom-saleModal .sale-btn:hover{background:#EB1C24!important}
  @media screen and (max-width: 600px) {
  #custom-saleModal .modal-dialog,#custom-saleModals-1 .modal-dialog,#custom-saleModals-2 .modal-dialog{top:5%}
  }
  .modal-body.p-0{background: url({{ section.settings.popup_image | img_url: 'master' }});background-size: cover;
   min-height: 70vh;}

  .panel{padding: 6vh 0;}
  .panel h6 {color: white;font-weight: 600;     text-align: center;   margin-top: 8px;}
   div#question::before { content: url(https://cdn.shopify.com/s/files/1/0057/8938/4802/files/star_5ca1e219-08c4-4c35-91a7-7f02ab050315.png?v=1671790648);
   position: absolute;top: -22px;left: -22px;}
    .question-container{margin:10px auto;padding:12px 0;width:80%;background-color:#fff;text-align:center;border-radius: 8px;
    border: 1px solid;position:relative;}
    .option-container{display:flex;justify-content:space-around;margin:10px auto;padding:5px;width:90%;flex-wrap:wrap; margin-top: 5vh;}
    .option:hover{background-color:#fa879b9e;}
    .previous, .submit{padding: 5px 16px;background-color: #fff;border-radius: 16px!important;border: 1px solid;}
    button.option{display:flex;flex-direction:column;align-items:center;width: 40%;margin-bottom: 12px;}
    @media(min-width:1024px) {
    button.option{width:16%}
    .question-container {width: 40%;}
    .modal-body.p-0 {background-position: unset;background-size: unset;}
    }
    
    @media (min-width: 576px){
      .modal-dialog {
       max-width: 1200px;
       margin: 1.75rem auto;
      }
    }
</style>

<div id="custom-saleModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body p-0">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="modal-body-content">
        {%- capture modal_content_inner -%}}
          <div class="panel">
          {% for block in section.blocks %}
            {% assign id =  forloop.index %}
          <div class="screen{{ id }} {% if id != 1 %}d-none{% endif %}" >
              <div class="question-container" id="question">{{ block.settings.quiz_text }}</div>
              <div class="option-container">
                <button class="option" {% if id == 2 or id == 4 %}
              value="{% if section.settings.enable_logic %}{{ block.settings.quiz_option1_url }}{% else %}a{% endif %}" {% endif %} id="op1">{{- block.settings.quiz_option1 -}}</button>

                <button class="option" {% if id == 2 or id == 4 %}
              value="{% if section.settings.enable_logic %}{{ block.settings.quiz_option2_url }}{% else %}b{% endif %}" {% endif %} id="op2">{{- block.settings.quiz_option2 -}}</button>

                <button class="option" {% if id == 2 or id == 4 %}
              value="{% if section.settings.enable_logic %}{{ block.settings.quiz_option3_url }}{% else %}c{% endif %}" {% endif %} id="op3">{{- block.settings.quiz_option3 -}}</button>

                <button class="option" {% if id == 2 or id == 4 %}
              value="{% if section.settings.enable_logic %}{{ block.settings.quiz_option4_url }}{% else %}d{% endif %}" {% endif %} id="op4">{{- block.settings.quiz_option4 -}}</button>
              </div>
              <div class="navigation pt-3 pl-4 ">
                 <button class="previous {% if id == 1 %}d-none{% endif %}" style="background: #b102027d;color:white;">< Previous Question</button>
                {% if id == 4 %}
                 <button class="submit d-none text-center">Submit</button>
                {% endif %}
              </div>
            </div>
          {% endfor %}   
          </div>
          {%- endcapture -%}
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  // for quiz to popup
    let camp = "{{ request.path | split: '/' | last }}";
      {% if section.settings.landing_based %}
        if (window.location.href.indexOf(camp) > -1 && sessionStorage.getItem("quizpopUp") === null) {
           $('#custom-saleModal .modal-body-content').html(`{{ modal_content_inner }}`)
          $(".Popup_quiz #custom-saleModal").modal("show");
           {% comment %} sessionStorage.setItem("quizpopUp", "poped"); {% endcomment %}
        }
      {% else %}
        $("{{ section.settings.popup_id }}").click(function(e) {
          $('#custom-saleModal .modal-body-content').html(`{{ modal_content_inner }}`)
          $(".Popup_quiz #custom-saleModal").modal("show");
        });
      {% endif %}

 
  let next = document.querySelectorAll('.option-container');
  let previous = document.querySelectorAll('.previous');
  // Next button and method
  let redirect,redirect2;
  let final = '';
  for (let i = 0; i < next.length; i++) {
    let self = next[i].querySelectorAll('.option');
    for (let j = 0; j < self.length; j++) {
      let selft = self[j];
      selft.addEventListener("click", () => {
        // for screen change 
        if (i < 3) {
         console.log(i); 
         document.querySelector(`.screen${i+1}`).classList.add("d-none");
         document.querySelector(`.screen${i+2}`).classList.remove("d-none");  
        }
        // sceens for taking decision
        let value = selft.value;
        if (i == 1) {redirect = value; console.log(redirect); }
        if (i == 3) {redirect2 = value; final = `${redirect}${redirect2}`; selft.style.backgroundColor = "#fa879b9e";
          {% unless block.settings.enable_comma %} switch (final) {  {{- section.settings.quiz_url -}}  } {% endunless %}
          console.log(final);  
          submit.classList.remove("d-none");
          self.forEach(element => {element.style.pointerEvents = "none"; });
        }
     })
    }

    // previous button and method
    let prev = previous[i];
    prev.addEventListener("click", () => {
      if (i > 0) {
        document.querySelector(`.screen${i+1}`).classList.add("d-none");
        document.querySelector(`.screen${i}`).classList.remove("d-none");
        self.forEach(element => {element.style.pointerEvents = "auto"; element.style.backgroundColor = "transparent";});
      }
      if (i == 2){submit.classList.add("d-none");}
    })

  }

  // submit button and method
  const submit = document.getElementsByClassName('submit')[0];
  document.addEventListener("click", (e) => { 
    if(e.target.matches('submit')) {
      document.location.href = final;
    }
  })

</script>
