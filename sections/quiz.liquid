<style>
   #custom-saleModal{z-index:9999;background:#0009;padding:0!important;transform:translateY(0%)}
   #custom-saleModal .modal-dialog,#custom-saleModals-1 .modal-dialog,#custom-saleModals-2 .modal-dialog{top:10%}
   #custom-saleModal .close{position:absolute;text-shadow: none;top: 1.5rem;right: 1.5rem;width: 30px;height: 30px;line-height: normal;background: #d0d9de;opacity: .8;font-weight: 400!important;border-radius: 50%!important;text-align:center;font-size:32px!important}
   .question-container span{position: absolute;top: 2rem; background: #ecf0f4;padding: 2px 8px;border-radius: 10px;left: 1.5rem;}
   #custom-saleModal .close:focus{border:0;outline:none}
   #custom-saleModal input#sale_email::placeholder{color:grey!important}
   #custom-saleModal .error-msg-sale,#custom-saleModal .thankyou-msg-sale,#custom-saleModal .aluser-msg-sale{text-align:center;margin:0;font-size:12px;opacity:.8}
   #custom-saleModal .sale-btn:focus{outline:none}
   #custom-saleModal img{display:block}
   #custom-saleModal .modal-content{border:0}
   #custom-saleModal .modal-form{background:{{ section.settings.popup_backgroung}} }
   #custom-saleModal input{background:transparent;color:#ccc;margin-right:4px;padding:0 12px;border:0}
   #custom-saleModal input::-webkit-input-placeholder{color:#ccc}
   #custom-saleModal .sale-btn:hover{background:#EB1C24!important}
   @media screen and (max-width: 600px) {
   #custom-saleModal .modal-dialog,#custom-saleModals-1 .modal-dialog,#custom-saleModals-2 .modal-dialog{top:5%}
     .section__header a{max-width:80%;}
   }

   .featured_collection_container{margin-block:2rem}
   .modal-body.p-0{background-size: cover;min-height: 70vh;}
   .panel{padding: 6vh 0;}
   .panel h6 {font-weight: 600; text-align: center;margin-top: 8px;}
   .option-container{display:flex;justify-content:space-evenly;margin:10px auto;padding:5px;flex-wrap:wrap; margin-top: 5vh;}
   .option:hover, .option:active {background-color: #ffcf00;}
   .previous{letter-spacing: -0.64px;color: #2f5b96;text-align: center;}
   .next, .submit{padding: 10px 16px;background-color: #081821;color: white;font-weight: 500!important;border-radius: 10px!important;border: 1px solid;}
   button.option{display:flex;flex-direction:column;align-items:center;width: 40%;margin-bottom: 12px;}
   @media(min-width:1024px) {
   button.option{width:16%}
   .modal-body.p-0 {background-position: unset;background-size: unset;}
   }
   @media (min-width: 576px){
     .modal-dialog {
       max-width: 768px;
       margin: 1.75rem auto;
     }
   }

  {% if section.settings.enable_question_ans %}
   .question-container {margin: 16% auto;background-color: transparent;border: 2px solid yellow;color: white;padding: 1rem;border-radius: 4px;position: unset;}
   div#question::before{display:none;}
   .option-container {display: block;}
   .modal-body.p-0 {background-size: contain;min-height: unset;}
   button.option { align-items: flex-start; width: 100%; padding: 5px 10px; margin-bottom: 16px; background: white; border-radius: 24px!important;}
   .previous, .next, .submit { background-color: #000; color: white; border-radius: 0px!important;border: 0;}
   .navigation.pt-3.pl-4 {position: absolute;right: 8%;bottom: 2%;}
   .option:hover, .option:active {background-color: #ffcf00;}
   @media (min-width: 576px){
   .modal-dialog {max-width: 600px;}
   .option-container{width:60%}
   .question-container {width: 80%;margin: 8% auto 4%;}
   }
  {% endif %}
</style>

