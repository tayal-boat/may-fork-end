                    {{- block.settings.quiz_option1 -}}
                  </button>

                  <button
                    class="option"
                    {% if section.settings.enable_question_ans %}
                      value="{{ block.settings.quiz_option2_url }}"
                    {% else %}
                      {%- if id == 2 or id == 4 %}
