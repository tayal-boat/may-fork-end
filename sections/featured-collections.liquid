{%- if section.settings.background != settings.background and section.settings.background != 'rgba(0,0,0,0)' -%}
  {%- assign blends_with_background = false -%}
{%- else -%}
  {%- assign blends_with_background = true -%}
{%- endif -%}

<style>
    #shopify-section-{{ section.id }} { 
      {%- if section.settings.background == 'rgba(0,0,0,0)' -%}
        {%- assign section_background = settings.background -%}
      {%- else -%}
        {%- assign section_background = section.settings.background -%}
      {%- endif -%}

      {%- if section.settings.text_color == 'rgba(0,0,0,0)' -%}
        {%- assign heading_color = settings.heading_color -%}
        {%- assign text_color = settings.text_color -%}
      {%- else -%}
        {%- assign heading_color = section.settings.text_color -%}
        {%- assign text_color = section.settings.text_color -%}
      {%- endif -%}

      {%- if section.settings.button_background == 'rgba(0,0,0,0)' -%}
        {%- assign button_background = settings.primary_button_background -%}
      {%- else -%}
        {%- assign button_background = section.settings.button_background -%}
      {%- endif -%}

      {%- if section.settings.button_text_color == 'rgba(0,0,0,0)' -%}
        {%- assign button_text_color = settings.primary_button_text_color -%}
      {%- else -%}
        {%- assign button_text_color = section.settings.button_text_color -%}
      {%- endif -%}

      --heading-color: {{ heading_color.red }}, {{ heading_color.green }}, {{ heading_color.blue }};
      --text-color: {{ text_color.red }}, {{ text_color.green }}, {{ text_color.blue }};
      --primary-button-background: {{ button_background.red }}, {{ button_background.green }}, {{ button_background.blue }};
      --primary-button-text-color: {{ button_text_color.red }}, {{ button_text_color.green }}, {{ button_text_color.blue }};

      --prev-next-button-background: {{ settings.background.red }}, {{ settings.background.green }}, {{ settings.background.blue }};
      --prev-next-button-color: {{ settings.text_color.red }}, {{ settings.text_color.green }}, {{ settings.text_color.blue }};

      background: rgb({{ section_background.red }}, {{ section_background.green }}, {{ section_background.blue }});
    --section-products-per-row:   {% if section.settings.horizontal_ui %}1 {% else %} 2{% endif %};
      margin: {{ section.settings.padding }};
    }
    .tabs-nav__item-list button {
      text-transform: unset !important;font-weight:700 !important;color: black;border: 0px;
      padding-bottom:0px; padding-inline: 10px; padding-block:2px;border-top-left-radius: 16px !important;
      border-bottom-left-radius: 16px !important;border-top-right-radius: 16px !important; border-bottom-right-radius: 16px !important;
    }
    .tabs-nav__item-list {box-shadow: none;}
    .tabs-nav--center .tabs-nav__scroller-inner {margin-left: 0;}
    button.tabs-nav__item.heading.heading--small{color:black;margin-right: 4vw;padding: 0.2rem 1rem;}
    button.tabs-nav__item.heading.heading--small[aria-expanded="false"]{
      background-color: #e3e3e3;color:black;opacity:1;font-weight: 500 !important;
    }
  button.tabs-nav__item.heading.heading--small[aria-expanded="true"]{ background-color: #000;color: #fff;}
  .tabs-nav__scroller-inner .tabs-nav__position {--translate: 0;--scale: 0;}
  [dir=ltr] .tabs-nav__position{left: 0;}
    button.tabs-nav__item.heading.heading--small:focus{outline: none;}


    .updated_featured_items .product-item-meta div[role="progressbar"]{bottom: 32px;right: -10px;}
    .updated_featured_items .product-item-meta .product-item-meta__price-list-container .variants-list{display: none;}

  @media screen and (max-width: 768px) {
     .flash-desk{margin-top: 1rem;align-items: center;}
     .tabs-nav--edge2edge {margin-top: 12px!important;}
    }
  @media screen and (min-width: 741px) {
      #shopify-section-{{ section.id }} { --section-products-per-row: {{ section.settings.products_per_row | at_most: 3 }};}
    }

  @media screen and (min-width: 1000px) {
      .flash-desk{width:80%;}
      .product-list__inner--scroller { margin-left:0; }
      #shopify-section-{{ section.id }} {--section-products-per-row: {{ section.settings.products_per_row | at_most: 4 }}; }
    }
  @media screen and (min-width: 1200px) {
      #shopify-section-{{ section.id }} {
        --section-products-per-row: {{ section.settings.products_per_row }}; margin: {{ section.settings.padding_desktop }};
      }
     .product-item-meta__color-count {margin-bottom: 5px;} 
   }
  {% if section.settings.horizontal_ui %}
    .price-list {border-bottom: 1px solid #e3e3e3;margin-bottom: 0.3rem;padding-bottom: 0.3rem;width: 100%;}
     .item-horizontal .product-item {flex-direction: row;}
     .item-horizontal .product-item{flex-direction: column!important;}
     .item-horizontal .product__wrapper{display:flex;min-height:170px;}
     .product-list__inner.item-horizontal .product-item__info{border-top-left-radius: 0;border-bottom-left-radius: 0;border-top-right-radius: 8px;border-bottom-right-radius: 8px;margin: 0 ;padding: 10px 12px 8px 16px;}
     .product-list__inner.item-horizontal .product-item__info .product-item-meta__reviews-badge{padding: 0 8px;border-radius: 15px;border: solid 0.5px #adadad;background-color: #f1efef;margin: 8px 2px;    line-height: 1.8rem;display: flex;justify-content: space-between;}
     .item-horizontal .product-item{border-radius: 8px; border: 1px solid #E7E7E7;background: #e7e7e7;}
     .product-horizontal {width: 60%;}
     .features-list.only-horizontal{margin: 0;border-top: 1px solid #e7e7e7;padding:0.8rem 0.5rem;border-bottom-left-radius: 8px;border-bottom-right-radius: 8px;background-color:white;}  
     .features-list.only-horizontal span.feature{font-weight: 500;}
  {% endif %}
{% if section.settings.header_ui %}
 #shopify-section-{{ section.id }} .tabs-nav__item-list {justify-content: center;}
 #shopify-section-{{ section.id }} .tabs-nav--center .tabs-nav__scroller-inner {margin-left: auto;}
 #shopify-section-{{ section.id }} p.view-all {display: none;}
 #shopify-section-{{ section.id }} h3.heading {font-weight: 500;padding: 0 20px 20px;position: relative;}
@media(max-width: 768px){
  #shopify-section-{{ section.id }} .tabs-nav__item-list {flex-wrap: wrap;justify-content: center!important;width: 88vw;gap: 20px;}
  #shopify-section-{{ section.id }}  header.section__header {padding: 5vw 0;background: #e3e3e3;border-radius: 8px;}
  #shopify-section-{{ section.id }}  button.tabs-nav__item.heading.heading--small {border: 1px solid;padding: 2px 20px;}
  #shopify-section-{{ section.id }} button.tabs-nav__item.heading.heading--small {margin-right: 0;}
  #shopify-section-{{ section.id }} h3.heading.h2::before {
   content: url(https://cdn.shopify.com/s/files/1/0057/8938/4802/files/star_5ca1e219-08c4-4c35-91a7-7f02ab050315.png?v=1671790648);
   position: absolute; top: -28px; left: -8px;
}
  
}
{% endif %}
    
</style>

<section class="section section--flush">
  <div class="section__color-wrapper">
    <div class="container ">
      <header
        style="gap:42px"
        class="section__header{% if section.settings.content != blank %} section__header--tight{% endif %}"
      >
        {%- if section.settings.title != blank -%}
          <div class="text-container">
            <a href="{%- if section.settings.title-url !=blank -%}{{section.settings.title-url}}{%- else -%} javascript:void(0){%- endif -%}">
              <h3 class="heading h2">{{ section.settings.title }}</h3>
            </a>

            {%- if section.settings.content != blank -%}
              {{- section.settings.content -}}
            {%- endif -%}
          </div>
        {%- endif -%}
        {% if section.settings['title-url'] and settings.enable_flash_sale %}
          <a style="display:flex;flex-direction: column;justify-content: left;" href="{{section.settings.title-url}}" class="align-items-lg-center flash-desk flex-lg-row-reverse">
            <div class="flash_sale">
              <p class="m-0 text-uppercase flash_text">
                <span class="thunder"
                  ><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lightning-fill" viewBox="0 0 16 16">
                    <path d="M5.52.359A.5.5 0 0 1 6 0h4a.5.5 0 0 1 .474.658L8.694 6H12.5a.5.5 0 0 1 .395.807l-7 9a.5.5 0 0 1-.873-.454L6.823 9.5H3.5a.5.5 0 0 1-.48-.641l2.5-8.5z"></path>
                    </svg></span
                >&nbsp;

              </p>
              {% render 'flashsale-timer', title: {{settings.flash_timer_text}}, end_date: settings.flash_end_date %}
            </div>
          </a>
        {% endif %}
        {%- if section.blocks.size > 1 -%}
          <tabs-nav class="tabs-nav tabs-nav--center tabs-nav--edge2edge">
            <scrollable-content class="tabs-nav__scroller hide-scrollbar">
              <div class="tabs-nav__scroller-inner">
                <div class="tabs-nav__item-list">
                  {%- for block in section.blocks -%}
                    {%- capture on_boarding_title -%}
                      {{ 'general.onboarding.collection_title' | t }}
                      {{ forloop.index }}
                    {%- endcapture -%}

                    <button
                      type="button"
                      class="tabs-nav__item heading heading--small ml-0"
                      aria-expanded="{% if forloop.first %}true{% else %}false{% endif %}"
                      aria-controls="block-{{ section.id }}-{{ block.id }}"
                      data-collection-handle="{{ block.settings.collection.handle }}"
                      {{ block.shopify_attributes }}
                    >
                      {{-
                        block.settings.label
                        | default: block.settings.collection.title
                        | default: on_boarding_title
                      -}}
                    </button>
                  {%- endfor -%}
                </div>
              </div>
            </scrollable-content>
          </tabs-nav>
        {%- endif -%}
      </header>

      <div class="featured-collections">
        {%- for block in section.blocks -%}
          {%- assign collection = block.settings.collection -%}
          {%- assign smallest_image_aspect_ratio = 0 -%}

          <product-list
            {% if settings.stagger_products_apparition %}
              stagger-apparition
            {% endif %}
            {% unless forloop.first %}
              hidden
            {% endunless %}
            id="block-{{ section.id }}-{{ block.id }}"
            class="product-list product-list--center" >
            <div
              {% unless section.settings.stack_products %}
                class="scroller"
              {% endunless %}
            >
              <div
                class="product-list__inner item-horizontal {% unless section.settings.stack_products %}product-list__inner--scroller hide-scrollbar{% endunless %}">
                {%- assign number_of_products_minus_one = section.settings.products_per_row | minus: 1 -%}
                {%- assign gap_width = 24.0
                  | divided_by: section.settings.products_per_row
                  | times: number_of_products_minus_one
                -%}
                {%- capture sizes_attribute -%}
                  (max-width: 740px) 52vw, calc(min(100vw - 80px, 1520px) / {{ section.settings.products_per_row }} -
                  {{ gap_width | ceil }}px)
                {%- endcapture -%}

                {%- for product in collection.products limit: section.settings.products_count -%}
                  {%- if product.featured_media -%}
                    {%- assign smallest_image_aspect_ratio = smallest_image_aspect_ratio
                      | at_least: product.featured_media.aspect_ratio
                    -%}
                  {%- endif -%}

                  {%- render 'product-item',
                    product: product,
                    collection: collection,
                    show_cta: section.settings.show_cta,
                    block: block,
                    sizes_attribute: sizes_attribute,
                    reveal: settings.stagger_products_apparition
                  -%}
                {%- else -%}
                  {%- assign smallest_image_aspect_ratio = 1 -%}

                  {%- for i in (1..section.settings.products_count) -%}
                    {%- capture product_image -%}product-{% cycle '1', '2', '3', '4', '5' %}{% endcapture %}
                    {%- render 'product-item-placeholder',
                      product_image: product_image,
                      show_cta: section.settings.show_cta,
                      reveal: settings.stagger_products_apparition
                    -%}
                  {%- endfor -%}
                {%- endfor -%}
                <p style="position: absolute;top: -2rem; right: 0;" class="view-all">
                  <a style="color:black;" href="{{collection.url}}"> <b>View All ></b> </a>
                </p>
              </div>
            </div>

            {%- unless section.settings.stack_products -%}
              {%- if collection.products_count == 0 -%}
                {%- assign products_shown = section.settings.products_count -%}
              {%- else -%}
                {%- assign products_shown = collection.products_count
                  | default: section.settings.products_count
                  | at_most: section.settings.products_count
                -%}
              {%- endif -%}

              {%- if products_shown > section.settings.products_per_row -%}
                <prev-next-buttons
                  class="product-list__prev-next hidden-pocket"
                  style="--smallest-image-aspect-ratio: {{ smallest_image_aspect_ratio }}"
                >
                  <button class="product-list__arrow prev-next-button prev-next-button--prev" disabled>
                    <span class="visually-hidden">{{ 'general.accessibility.previous' | t }}</span>
                    {%- include 'icon' with 'nav-arrow-left', block: true, direction_aware: true -%}
                  </button>

                  <button class="product-list__arrow prev-next-button prev-next-button--next">
                    <span class="visually-hidden">{{ 'general.accessibility.next' | t }}</span>
                    {%- include 'icon' with 'nav-arrow-right', block: true, direction_aware: true -%}
                  </button>
                </prev-next-buttons>
              {%- endif -%}
            {%- endunless -%}

            {%- if block.settings.button_text != blank -%}
              <div class="section__footer">
                <a class="button button--primary" href="{{ block.settings.button_url | default: collection.url }}">
                  {{- block.settings.button_text -}}
                </a>
              </div>
            {%- endif -%}
          </product-list>

          {% break %}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function(){
    $('#shopify-section-{{ section.id }} tabs-nav .tabs-nav__item-list button').on('click', function(e){
      e.preventDefault();

      let collection_handle = $(this).data("collection-handle");
      //let products_limit = {{ section.settings.products_count }};

      $(this).parents('shopify-section--featured-collections').find('.featured-collections .product-list__inner').html('');
      $(this).parents('shopify-section--featured-collections').find('.featured-collections .product-list__inner').html('<button class="btn custom_loading_icon"><span class="load-icon" loader=""><img class="lazyload" src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/final-loader.gif?v=1670845994" alt="Load More" style="width: 50px;"></span></button>');

      let self = this;

      $.ajax({
        url: 'https://www.boat-lifestyle.com/collections/'+collection_handle+'?page=1',
        method: "get",
        type: "GET",
        dataType: "html",
        success: function (result) {
          
          let t = $(result).find("product-list.product-list .product-list__inner").html();
          $(self).parents('.shopify-section--featured-collections').find("product-list.product-list").removeAttr('hidden');
          $(self).parents('.shopify-section--featured-collections').find('.featured-collections product-list.product-list .product-list__inner').html(t);
          $(self).parents('.shopify-section--featured-collections').find('.featured-collections').addClass('updated_featured_items')
          $(self).parents('.shopify-section--featured-collections').find(".tabs-nav__item-list .tabs-nav__item").attr('aria-expanded', 'false');
          $('.custom_loading_icon').remove();
          $(self).attr('aria-expanded', 'true');
          
        },
        error: function (error) {
            console.log(error);
        },
    });

    })
  })
</script>

