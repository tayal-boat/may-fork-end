  .brand-text{padding:20px 20px;background: #000;}
  .brand-text p.brand_content{line-height: normal;font-size: 14px;max-width: 931px;margin: 0 auto;color: #ffffff;text-align: center;}
  .brand-text a {text-decoration: none !important;}
  .social--media .social-media__item {box-shadow: none;}
  .download-box {display: flex;width: 100%;justify-content: center;align-items: center;}
  .download-box p {margin: 0 2em;font-weight: bold;}
  .download-box a {display: inline-block;margin: 0 10px;}
  .desktop_menu_link{display: block;}
  .mobile_footer_item_title{display: none;}
  .footer__item-list {gap: 3vw;}
  .footer .container{background:#eff4f7;max-width:98%;padding:0 20px;}
  p.desktop_menu_link.footer__item-title.heading.heading--small, footer .signup-form .input-block #subscriber-email{color: #000;text-transform: none;}
  button#btn-back-to-top {display: none;padding: 0.5rem 0.75rem;width: 40px;font-weight: 400!important;border-radius: 0!important;position: fixed;color:white;background-color:black;{% if template contains 'product' or template contains 'collection' %}bottom: 18%!important;{% else %}bottom: 9%;{% endif %}right: 0.1%;align-items: center;z-index:99;}
  .social-media__item--facebook:before {background: #4267B2; }
  .social-media__item--twitter:before{background: #1DA1F2; }
  .social-media__item--instagram:before{background: #E95950; }
  .social-media__item--youtube:before{background: #FF0000; }
  .social-media__item--linkedin:before{background: #0A66C2; }
  br.only_mobile{display: none;}
  .footer__aside .copyright_footer .copy{font-size: 12px;color: #a7afb7;}

