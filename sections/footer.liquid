    .signup-form span:first-child{font-size:20px!important;margin-bottom:7px!important;}
    #subscribe-btn{margin:0!important;border-bottom:0;}
    #shopify-section-footer .footer{padding-bottom:3rem;}
    .footer__item-content-newsletter{margin-bottom:2rem;}
    ul.social-media.list--unstyled {justify-content: center;}
    .footer-logo{text-align: center;margin: 2rem auto 0;max-width:150px;}
