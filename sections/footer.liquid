    footer .footer__item--links {border-bottom: 0;}
    footer ul.linklist.list--unstyled li{width: 47%;float: left;padding: 10px 0px 5px;}
    footer ul.linklist.list--unstyled li a{font-weight: normal;font-size:12px!important;}
    footer .footer__aside .social--media{width: 100%;margin-top: 0;}
    .footer .container {padding: 0;}
    .footer .container .footer__inner{padding: 0;}
    .footer-bottom-row {padding: 0 12px; justify-content: center;padding-bottom: 20px;margin-bottom:0!important;}
