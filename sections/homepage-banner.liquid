<div class="homepage-banner container">
    <a
    href="{% if section.settings.link != blank %}{{section.settings.link}}{% else %}javascript:void(0){% endif %}"
    class="slide-url"
>
{% if section.settings.image and section.settings.image_mobile %}
    <picture>
    <source
        media="(min-width: 769px)"
        {% render 'image-attributes', image: section.settings.image, sizes: '700,800,900,1000,1200,1400,1600,1800,2000', ignore_src: true %}
    >
    <img
        class="image-overlay__image_"
        {% render 'image-attributes', image: section.settings.image_mobile, sizes: '200,300,400,500,600' %}
        alt="{{block.settings.desktop_image.alt}}"
    >
    </picture>
    {% endif %}
</a>
</div>

{% schema %}
  {
    "name": "homepage-banner",
    "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "link"
    }
    ],
"presets": [
    {
      "category": "Image",
      "name": "homepage-banner",
      "settings": {}
    }
  ]
}
{% endschema %}