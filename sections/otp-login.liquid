<section>
  <div class="container">
    <div class="page-content page-content--small">
      <div class="customer-login-section">
        <div class="customer-head">
            <div class="otp-login-title">
          {% if section.settings.image %}
            <img src="{{ section.settings.image }}" alt="" class="customer-head-img">
          {% elsif section.settings.title != blank %}
            <h1 class="customer-head-title">{{ section.settings.title }}</h1>
          {% endif %}
          </div>
          <div class="otp-login-message">
            <h3> Enter the 6-digit code sent to your mobile number</h3>
          </div>
          <div class="login-head-bottom-border">
            <svg width="224" height="4" viewBox="0 0 224 4" fill="none" xmlns="http://www.w3.org/2000/svg">
              <ellipse cx="112" cy="2" rx="112" ry="2" fill="#D9D9D9"/>
            </svg>
          </div>
        </div>
        <div class="customer-login-container">
          <div class="otp-login-head">
            <h2>LOGIN</h2>
            <div class="customer-login-links">
              <span>New to boAt?
                <a href="">Create an account</a>
              </span>
            </div>
          </div>
          <div class="otp-login-body">
            <div class="mobile-login-input">
            <div class="input">
              <input type="tel" id="otp-number" pattern="[0-9]*" maxlength="10" name="mobile" id="mobile" value="" class="input__field" required>
              <label for="mobile" class="input__label">Mobile number</label>
            </div>
            <div class="mobile-login-edit-icon">
            <img src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/Mask_group_1_8f1d5e89-bda7-4555-bfeb-d14272893b2c.png?v=1667911654">
            </div>
            </div>
              <div class="input mobile-otp-inout">
              <input type="number" id="otp-number" pattern="[0-9]*" maxlength="10" name="otp" id="otp" value="" class="input__field" required>
              <label for="mobile" class="input__label">One time password</label>
            </div>
            <button class="otp-login-btn button button--secondary button--full">
              SEND OTP
            </button>
            <p class="otp-login-privacy-policy">
              By Confirming, you agree to boAt's Terms and Conditions and Privacy Policy.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Customer login",
    "class": "shopify-section--main-customers-otp-login",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Hello boAthead"
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }
    ]
  }
{% endschema %}