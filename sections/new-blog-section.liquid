{%- assign blog = section.settings.blog -%}
<style>
  .shopify-section--single-blog .container.article_container.scroller {
    flex-wrap: nowrap;overflow-x: auto;scroll-snap-type: x mandatory;
  }
  .article--item {  max-width: 32%;min-width: 32%;margin-right: 15px;}
  .article--info .article--title a{text-decoration: none;}
  .article_container .article--meta{margin-bottom: 12px;}
  .article_container .a_published-at{font-size: 12px;}
  .article_container .top--info{margin-bottom: 0px;}

  @media(max-width: 676px){
    .shopify-section--single-blog .article_container {padding-left: 0px;}
    .shopify-section--single-blog .article--item:first-child{margin-left: 12px;}
  }
</style>
<header class="section__header blog__header">
  <div class=""> 
    <a class="d-flex justify-content-between align-items-center" href="{{ section.settings.url }}">
      <h3 class="ui2-heading">{{ section.settings.title }} </h3>
      <b class="view-all">View All
        {%- render 'icon' with 'right-arrow-blue' -%}
      </b>
    </a>
  </div>
</header>

<div class="container article_container scroller">
  {% for article in blogs[blog].articles limit: section.settings.articles_per_page %}
    <div class="article--item scroller__inner">
      <a href="{{ article.url }}" class="article-item__image-container">
        <img class="article-item__image" sizes="(max-width: 740px) 81vw, (max-width: 999px) 37vw, 425px" loading="lazy" {% render 'image-attributes', image: article.image, sizes: '600,700,800,1000,1200,1400,1600,1800,2000' %}>
      </a>
      <div class="article--info">
          
          <p class="article--title"><a href="{{ article.url }}">{{ article.title | truncate: 60, '...' }}</a></p>
          <div class="article--content visually-hidden">{{ article.content }}</div>
          <div class="article--meta">
              <span class="a_published-at">{{ article.published_at | date: "%d %b, %Y" }}</span>
              {% comment %} <b class="view-all">
                <a href="{{article.url}}">
                  Read Now
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14">
