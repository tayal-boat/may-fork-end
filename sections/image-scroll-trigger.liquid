.image_scroll_trigger_text {
    position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    margin: 2rem;
}
.image_scroll_trigger_inner {
    display: flex;
    justify-content: space-between;
    position: relative;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    z-index: 9;
}
.image_scroll_trigger_inner.image_scroll_fixed {
    position: fixed;
    top: var(--header-height);
}

/* Fading animation */
.image_scroll_fade {
  animation-name: fade;
  animation-duration: 1.5s;
}

@keyframes fade {
  from {opacity: .4} 
  to {opacity: 1}
}
