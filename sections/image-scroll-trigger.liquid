<div class="image_scroll_trigger_container">
  <div class="image_scroll_trigger_inner">
    <div class="image_scroll_trigger_text">
      <h3>
        {{ section.settings.title }}</h3>
      <span>{{ section.settings.subText }}</span>
      <h1>{{ section.settings.productTitle }}</h1>
      <p>{{ section.settings.discription }}</p>
    </div>
    <div class="image_scroll_trigger_image_container">
      {% for block in section.blocks %}
        {% if block.settings.image %}
        <div class="mySlides image_scroll_fade">
          <img
            src="{{ block.settings.image | img_url: 'master' }}"
            alt="{{ block.settings.image.alt }}"
            width="{{ block.settings.image.width }}"
            height="auto">
            </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
const imageScrollContainerMain = document.querySelector('.image_scroll_trigger_container');
const imageScrollContainer = document.querySelector('.image_scroll_trigger_inner');

var observer = new IntersectionObserver(function(entries) {
  if(entries[0].isIntersecting === true){
    imageScrollContainer.classList.add('image_scroll_fixed');
  }else{
    imageScrollContainer.classList.remove('image_scroll_fixed');
  }
}, { threshold: [1] });
if(imageScrollContainerMain !== null){
  observer.observe(imageScrollContainerMain);
}

{% comment %} 
let slideIndex = 1;
showSlides(slideIndex);

function plusSlides(n) {
  showSlides(slideIndex += n);
}

function showSlides(n) {
  let i;
  let slides = document.getElementsByClassName("mySlides");
  if (n > slides.length) {slideIndex = 1}    
  if (n < 1) {slideIndex = slides.length}
  for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";  
  }
  slides[slideIndex-1].style.display = "block";  
}
var oldX = 0,
oldY = 0;
document.querySelector('.mySlides.image_scroll_fade').addEventListener('scroll', (e) => {
  oldX = e.pageX;
  oldY = e.pageY;
  console.log(oldX, oldY);
});

document.querySelector('.mySlides.image_scroll_fade').addEventListener('touchmove', (e) => {
  oldX = e.changedTouches[0].pageX;
  oldY = e.changedTouches[0].pageY;
  console.log(oldX, oldY);
});

document.querySelector('.mySlides.image_scroll_fade').addEventListener("dragend", slideGetMouseDirection, false);

document.querySelector('.mySlides.image_scroll_fade').addEventListener('touchend', (event) => {
  var touch_event = event.changedTouches[0]; 
  slideGetMouseDirection(touch_event);
});

