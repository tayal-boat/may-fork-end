<script>
  
  $(".register_here").click(function(){
    var customerName = $("#user_name").val();
    var customerEmail = $("#user_email").val();
    var customerPhone = $("#user_phone").val();
    var phoneNum = /\(?([0-9]{3})\)?([ .-]?)([0-9]{3})\2([0-9]{4})/;
    function validateEmail($email) {
      var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
      return emailReg.test( $email );
    }
    if(customerName !== "") {
      if(customerEmail !== "" && validateEmail(customerEmail)) {
        var localValueBook = localStorage.getItem('customerEmailId');
        if(localValueBook === customerEmail) {
            $(".aluser-msg-book").show();
        }
        else {
          if ((customerPhone !== "") && (customerPhone.match(phoneNum))) {
           if(customerPhone.length > 10) {
             $(".error-msg-phone").show();
           }
           else {
             localStorage.setItem('customerEmailId', customerEmail);
             $(".discountcode-pop").fadeIn();
             $(".book-overlay").fadeIn();
             fbq('track', 'CompleteRegistration');
//              $(".discount-code").fadeIn();
             smartech('contact', '8', {
              'pk^email': customerEmail ,
              'FIRST_NAME': customerName ,
              'PHONE': customerPhone
              }, function() {
              smartech('identify', customerEmail );
              smartech('dispatch', 'Airdopes_registration', {
              'email': customerEmail ,
              'first_name': customerName ,
              'phone': customerPhone
              });
              })
           }
         }
          else {
            $(".error-msg-phone").show();
          }
        }

      }
      else {
          $(".error-msg-email").show();
      }
    }
    else {
    	$(".error-msg-name").show();
    }
    setTimeout(function(){
    	$(".thankyou-msg-book, .error-msg-email, .error-msg-phone, .aluser-msg-book, .error-msg-name").fadeOut();
    }, 5000);
    
    
  	
  })
  $(".book-overlay").click(function(){
  	$(".discountcode-pop").fadeOut();
    $(".book-overlay").fadeOut();
  });

</script>