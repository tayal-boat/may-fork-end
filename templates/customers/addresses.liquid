          </div>
          <div class="input-row">
            <label>
              {{ form.set_as_default_checkbox }} {{ 'customer.addresses.set_default' | t }}
            </label>
          </div>
        <div class="action_bottom">
          <p><input class="btn" type="submit" value="{{ 'customer.addresses.update' | t }}" id="update-2" /></p>
