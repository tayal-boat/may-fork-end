              	e.preventDefault();
            	return false;
              }
            }
            
          }
          else {
          	alert("Address field can't be empty and should contain less than 80 characters and must not contain any special character except hypehn(-) and comma(,)!");
            e.preventDefault();
            return false;
          }
        }
        else {
              alert("Please enter a valid First Name and last Name!");
              e.preventDefault();
              return false;
          }
