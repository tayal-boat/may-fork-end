      {% endfor %}
    {% endif %}  
    {% if linklists.test1.links.size > 0 %}
        {% for link in linklists.test1.links %}
    		{% if link.title == "test4" %}
			{% include 'page-collections' %}
    		{% endif %}
        {% endfor %}
     {% endif %}
    ==Some test content==
    {% if linklists.test1.links.size > 0 %}
        {% for link in linklists.test1.links %}
