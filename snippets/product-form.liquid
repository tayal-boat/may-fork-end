            block.settings.show_payment_button and template.suffix !='quick-buy-popover' %}data-use-primary{% endunless %}
            data-product-add-to-cart-button data-button-content="{{ 'product.form.pre_order' | t | escape }}"
            class="product-form__add-button button {% unless product.selected_or_first_available_variant.available %}button--ternary{% else %}{% if block.settings.show_payment_button and template.suffix != 'quick-buy-popover' %}button--secondary{% else %}button--primary{% endif %}{% endunless %} button--full"
            {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}>
            {{- 'product.form.pre_order' | t -}}
          </button>
          {% else %}
          <button id="AddToCart" onclick="quickATC()" type="submit" is="loader-button" {% unless
            block.settings.show_payment_button and template.suffix !='quick-buy-popover' %}data-use-primary{% endunless %}
            data-product-add-to-cart-button
            data-button-content="{% if product.template_suffix == 'pre-order' or product.tags contains 'prebooking' %}{{ 'product.form.pre_order' | t | escape }}{% else %}{{ 'product.form.add_to_cart' | t | escape }}{% endif %}"
            class="product-form__add-button button {% unless product.selected_or_first_available_variant.available %}button--ternary{% else %}{% if block.settings.show_payment_button and template.suffix != 'quick-buy-popover' %}button--secondary{% else %}button--primary{% endif %}{% endunless %} button--full"
            {% unless product.selected_or_first_available_variant.available %} disabled{% endunless %}
            data-price="{{ product.price }}">
            {%- if product.selected_or_first_available_variant.available -%}
            {{- 'product.form.add_to_cart' | t -}}
            {%- if template.suffix != 'quick-buy-popover' and template.suffix != 'quick-buy-drawer' -%}
            <span class="pdp-btn-price d-lg-none">₹{{ product.price | divided_by: 100 }}</span>
            {% endif %}
            {%- else -%}
            {{- 'product.form.sold_out' | t -}}
            {%- endif -%}
          
          </button>
          {%- endif -%}

          {%- if template.suffix != 'quick-buy-popover' and template.suffix != 'quick-buy-drawer' -%}

          {% unless product.tags contains settings.products_offering_freebie or product.price >= 400000 %}
          <div class="amazon-c d-flex align-items-baseline justify-content-between">
<!--             <button type="button" onclick="onBuyNowClick(this)" class="w-50 w-lg-100" id="gokwik-buy-now" {% if settings.hideFlow
              %} style="display:none !important;" {% endif %} {% unless product.selected_or_first_available_variant.available
              %}disabled style="display:none!important;" {% endunless %}>
              {{ settings.buynow-titile }}
              <div style="display:none">
                <div class="cir-loader">Loading..</div>
              </div>
            
              </button> -->
            {% render 'gokwik-buy-now' %}
              <button id="BIS_trigger" type="button" class="custom-notify-btn"
              data-variant-id="{{ product.selected_or_first_available_variant.id }}" {% if
              product.selected_or_first_available_variant.available %} style="display: none!important;" {% endif %}>
              Notify me
              </button>
              <div class="d-lg-none current-in-cart" {% unless product.selected_or_first_available_variant.available %}
                style="display: none;" {% endunless %}>
                {{ random_cart }}
              </div>
              </div>
              {% endunless %}

          </div>

    </div>

    {%- endif -%}
    {%- unless template.suffix != 'quick-buy-popover' and template.suffix != 'quick-buy-drawer' -%}
    <button id="BIS_trigger" type="button" class="custom-notify-btn"
      data-variant-id="{{ product.selected_or_first_available_variant.id }}" {% if
      product.selected_or_first_available_variant.available %} style="display: none;" {% endif %}>
      Notify me
    </button>
    {% endunless %}
    {%- if block.settings.show_payment_button and template.suffix != 'quick-buy-popover' and template.suffix !=
    'quick-buy-drawer' -%}
    {%- comment -%} {{ form | payment_button }} {%- endcomment -%}
    {%- endif -%}

    </product-payment-container>
    {%- endform -%}
    {% if template.suffix != 'quick-buy-popover' and template.suffix != 'quick-buy-drawer' %}
    <div class="d-flex flex-column" aria-role="additonal-info">
      {% comment %} <div class="price-container p-lg-0 mb-2">{% render 'product-payment-partner' %}</div>{% endcomment %}
      {% if product.metafields.custom.product_highlights %}
      <div class="price-container product-highlight mt-3 desktop">
