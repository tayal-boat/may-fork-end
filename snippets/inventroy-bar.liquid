{% assign min = 10 %} {% assign max = 99 %} {% assign diff = max | minus: min
%} {% assign randomNumber = "now" | date: "%N" | modulo: diff | plus: min %}
<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="{{randomNumber}}"
  aria-valuemin="0" aria-valuemax="100" style="width:{{randomNumber}}%">
    <span class="" style="color: black">{{randomNumber}}% Sold</span>
  </div>
</div>

<style>
  .progress {
    margin-top: 1rem;
  }
  .progress-bar {
    height: 100% !important;
    background: linear-gradient(90deg, #FAC40A 50%, #C89B00 71.79%, #FAC40A 94.98%) !important;
  }
</style>