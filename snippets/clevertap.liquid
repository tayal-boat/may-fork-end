                <button type="button" style="display:none" class="btn btn-info btn-lg" data-toggle="modal" id="myBtn" data-target="#myModal">Open Modal</button>
                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                  <div class="modal-dialog modal-custom">
                    <!-- Modal content-->
