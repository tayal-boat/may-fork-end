                      <button hidden type="button" class="close" id="ct-close" data-dismiss="modal">&times;</button>
                      <iframe id="ctIframe" src="/apps/sw/testfile.html" title="Order Form_Shopify" width="400" height="250" frameborder="0" style="margin: auto;"></iframe>
                    </div>
                  </div>
                </div>
              </div>
        <script>
          $(document).ready(function () {
              $("#myModal").css({"z-index": "10000","background-color": "rgba(0,0,0,0.6)"})
              $("#myModal .modal-dialog").css({"position": "absolute","top": "11%"})
          });
          if (window.matchMedia("(max-width: 767px)").matches) {
