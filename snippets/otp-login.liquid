<div class="customer-login-section customer--section" otp_login_screen="true">
  <div class="otp-login-head">
    {% if request.path == routes.account_login_url or request.path == routes.account_register_url %}
      <h2>Get
        <b>started</b>
      </h2>
      <div class="customer-login-links">
        <span>Please enter your Mobile Number to continue
        </span>
      </div>
    {% endif %}
  </div>
  <div class="mobile-login-otp_heading">
    <h2>OTP
      <b>Verification</b>
    </h2>
    <span>Enter the OTP sent to your Mobile Number</span>
  </div>
  <div class="customer-login-container">
    <div class="otp-login-body otp-login-body-container">
      <div class="otp-login-input-container">
        <div class="mobile-login-input">
          <label for="mobile" class="notifyMe_number_heading">Enter Mobile Number</label>
          <div class="input notifyMe_mobile_container">
            <input
              type="tel"
              id="otp-mobile-number"
              pattern="[0-9]*"
              maxlength="10"
              name="mobile"
              value=""
              class="input__field"
              placeholder="Type here"
              required>
            <span class="notifyMe_mobile_number_lable">+91</span>
          </div>
          <div class="mobile-login-edit-icon">
            <img src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/Mask_group_1_8f1d5e89-bda7-4555-bfeb-d14272893b2c.png?v=1667911654">
          </div>
        </div>
        <div class="input mobile-otp-inout">
          {% comment %} <input
          type="text"
          pattern="\d{6}"
          name="otp"
          id="otp"
          value=""
          class="input__field"
          autocomplete="one-time-code"
          inputmode="numeric"> {% endcomment %}
          <div class="mobile_otp_input_container">
            <div id="OTPInput"></div>
            <input
              hidden
              id="otp"
              name="otp"
              value="">
          </div>
          {% comment %} <label for="mobile" class="input__label">One time password</label> {% endcomment %}
        </div>
      </div>
      <div class="email-list-container"></div>
      <div class="otp-timer-container">
        <p class="resend-otp">
          <span class="resend-timer">
            <b>Resend OTP</b>
            in
            <span id="timer"></span>
          </span>
          {% comment %} <span class="resend-text">Didn’t receive the code ?
          </span> {% endcomment %}
        </p>
        <p id="resend__otp" class="resend-btn login-resend-btn">
          <span>
            <b>Resend OTP</b>
          </span>
        </p>
      </div>
      <p class="otp-login-error"></p>
      <div class="otp-login-btn-container">
        <button class="otp-login-btn button button--secondary button--full">
          SEND OTP
        </button>
        <button class="otp-login-confirm-btn button button--secondary button--full">
          Continue
        </button>
        <button class="otp-login-submit-btn button button--secondary button--full">
          Continue
        </button>
      </div>

      <p class="otp-login-privacy-policy">
        We don’t share your information with others
      </p>
    </div>

    <div class="otp-register-body otp-login-body">
      <div class="otp-signup-content">
        <h3 data-signup-content>Hey boAthead, this email ID would be used for sending order invoices. Kindly provide your private email ID to minimize any loss of your personal data</h3>
      </div>
      <div class="otp-login-input-container">
        <div class="input otp-fullName">
          <label for="full_name" class="input__label">Full name</label>
          <input
            type="text"
            id="full_name"
            class="input__field"
            name="full_name"
            required="required"
            placeholder="Type here"
            autocomplete="given-name">
        </div>
        <div class="mobile-otp-email">
          <div class="input otp-email">
            <label for="email" class="input__label">{{ 'customer.register.email' | t }}</label>
            <input
              type="email"
              id="email"
              class="input__field"
              name="email"
              required="required"
              placeholder="Type here"
              autocomplete="email">
          </div>
          <div class="mobile-login-edit-icon">
            <img src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/Mask_group_1_8f1d5e89-bda7-4555-bfeb-d14272893b2c.png?v=1667911654">
          </div>
        </div>
      </div>
      <div class="email-list-container"></div>
      <div class="otp-timer-container">
        <p class="resend-otp">
          <span class="resend-timer">Resend OTP in
            <span id="timer"></span>
          </span>
          <span class="resend-text">Didn’t receive the code ?
          </span>
        </p>
        <p id="resend__otp" class="resend-btn signUp-resend-btn">
          <span>Resend</span>
        </p>
      </div>
      <p class="otp-login-error"></p>
      <div class="otp-login-btn-container">
        <button class="otp-login-submit-btn button button--secondary button--full">
          Submit
        </button>
      </div>

      <p class="otp-login-privacy-policy">
        We don’t share your information with others.
      </p>
    </div>

  </div>
</div>
<div class="oto-login-success-container">
  <div class="otp-success-icon">
    <img src="https://cdn.shopify.com/s/files/1/0057/8938/4802/files/final-loader.gif" alt="otp success icon">
  </div>
  <div class="otp-success-title">
    <h2>Woohooo!!! <br>You are successfully logged in.</h2>
  </div>
  <div class="otp-success-text">
    <p>Sailing in
      <span id="countdown">5</span>
      seconds…</p>
  </div>
</div>