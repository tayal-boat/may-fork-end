<script type="text/javascript">
  $(document).ready(function() {
    {%- assign product__price = product.price | plus: 0 | divided_by: 100 -%}
  	$('#zestmoney-widget-control').click(function() {
     clevertap.event.push("ZestMoney Widget Clicked", {
        "Product Name": '{{product.title}}',
        "Product Id": {{product.id}},
        "Product Category": '{{product.type}}',
        "Product Price": {{product__price}},
        "userSource": userSource
     });
    });
    $("#AddToCart").click(function(){
        var isPreOrder;
        {% if product.tags contains "preorder" %}
        	isPreOrder = true;
        {% else %}
        	isPreOrder = false;
        {% endif %}
      	var variant_title = $(".color-swatch__radio:checked").val();
          clevertap.event.push("Added to Cart", {
            "Product Name": '{{product.title}}' + ' - ' + variant_title,
            "Product Id": {{product.id}},
            "Product Category": '{{product.type}}',
            "Amount": {{product__price}},
            "Quantity": 1,
            "Image url": 'https:{{product.featured_image | img_url: '1024x1024'}}',
            "source": 'Product Page',
            "isPreOrdered": isPreOrder,
            "userSource": userSource
          });
          clevertap.profile.push({
            "Site": {
                "A2C Product Name": '{{product.title}}' + ' - ' + variant_title,
                "A2C Amount": {{product__price}},
                "A2C Quantity": 1,
                "A2C Image url": 'https:{{product.featured_image | img_url: '1024x1024'}}'
            }
          });
          dataLayer.push({ ecommerce: null });  // Clear the previous ecommerce object.
          dataLayer.push({
            'event': 'add_to_cart',
            'ecommerce': {
              'items': [{
                'item_name': '{{product.title}}',
               'item_id': {{product.id}},
               'price': {{bold_price | plus: 0 | divided_by: 100}},
               'item_category': '{{product.type}}',
               'item_variant': 'variant_title',
                'quantity': '1'
              }]
            }
          });
      });
    var productTitle = '{{product.title}}';
      productTitle = productTitle + ' - boAt Lifestyle';
      $(".product-tabs__content").find("img").attr("alt", productTitle);
    
    
    
    
    
    
    
  });

</script>