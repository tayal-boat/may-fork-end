{% comment %} Preload PDP featured image ( Impacts LCP )  {% endcomment %}

{% if template.name == 'product' %}
<link
  rel="preload"
  as="image"
  media="(max-width: 740px)"
  imagesizes="100vw"
  imagesrcset="{% render 'image-attributes', image: product.selected_or_first_available_variant.featured_media, sizes: '400,500,600,700,800,900,1000', sizes_only: true %}"
  >
<link
  rel="preload"
  as="image"
  media="(min-width: 741px)"
  imagesizes="100vw"
  imagesrcset="{% render 'image-attributes', image: product.selected_or_first_available_variant.featured_media, sizes: '600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600', sizes_only: true %}"
  >
{%- endif -%}


