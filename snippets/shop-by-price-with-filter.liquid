{% assign filter_list = object.metafields.custom.shop_by_price_using_filter.value %}
{% if filter_list %}
  <div class="shop_feature_list_container nav_collection_drawer_sections">
    <h2 class="nav_collection_drawer_heading">Shop by Price</h2>
    <div class="shop_feature_list">
      {% for filter in filter_list %}
        <div class="shop_feature_item">
          <a href="{{ filter.filter_url }}">
            <div class="shop_feature_item-image-container">
              {% if filter.image %}
                <div class="shop_feature_item-image">
                  <img src="{{ filter.image | img_url: 'master' }}">
                </div>
              {% endif %}
            </div>
            <div class="shop_feature_item_label">
              <span>{{ filter.title }}
              </span>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}