<style>
  .fixed_nav {
  	position: fixed;
    bottom: 0;
    width: 100%;
    left: 0;
    right: 0;
    height: auto;
    background: #2c2c2c;
    text-align: center;
    z-index: 99;
  }
  .row-nav {
  	margin: 0;
    padding: 10px 0;
  }
  .fixed_nav--link {
  	display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: white;
    position: relative;
  }
  .fixed_nav--link:hover, .fixed_nav--link:focus {
  	color: white;
  }
  .beside-svg {
    position: absolute;
    top: -5px;
    right: 19px;
    display: block;
    background: #ff0000;
    width: 15px;
    height: 15px;
    border-radius: 50%;
    text-align: center;
    line-height: 15px;
    font-size: 10px;
  }
  span.icon_name {
    font-size: 12px;
  }
</style>
