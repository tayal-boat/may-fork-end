/* Arrows */

.slick-product-prev,
.slick-product-next,
.slick-prev,
.slick-next {
  position: absolute;
  z-index: 1;
  display: block;
  line-height: 0px;
  font-size: 0px;
  cursor: pointer;
  background: transparent;
  color: transparent;
  top: 50%;
